        }

        .menu-active .menu-container {
            right: 0;
        }

        .menu-active .hamburger-icon span:nth-child(1) {
            transform: rotate(45deg) translate(5px, 5px);
        }

        .menu-active .hamburger-icon span:nth-child(2) {
            opacity: 0;
